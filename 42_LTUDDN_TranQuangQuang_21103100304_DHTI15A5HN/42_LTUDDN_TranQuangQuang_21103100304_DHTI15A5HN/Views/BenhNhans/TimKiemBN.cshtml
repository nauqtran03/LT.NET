
@model IEnumerable<_42_LTUDDN_TranQuangQuang_21103100304_DHTI15A5HN.Models.BenhNhan>

@{
    ViewBag.Title = "TimKiemBN";
}

<h2>Index</h2>


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Mời bạn nhập tên bệnh nhân: ")
        @Html.TextBox("tenBN")
    </div>
    <button type="submit">Tìm kiếm</button>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT_)
        </th>
        <th></th>
    </tr>
    @if (!String.IsNullOrEmpty(ViewBag.tenBN) && Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT_)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaBN }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaBN }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaBN })
                </td>
            </tr>
        }

    }
</table>

