﻿@{
    ViewBag.Title = "SoHoanHao";
}

<h2>Tìm số hoàn hảo trong phạm vi n</h2>

<form method="post">
    <label for="n">Nhập giá trị n:</label>
    <input type="number" id="n" name="n" required />
    <button type="submit">Submit</button>
</form>

@if (ViewBag.PerfectNumbers != null)
{
    <h3>Kết quả: Các số hoàn hảo từ 1 đến @ViewBag.n</h3>
    <ul>
        @foreach (var num in ViewBag.PerfectNumbers)
        {
            <li>@num</li>
        }
    </ul>
}