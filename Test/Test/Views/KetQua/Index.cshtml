@model IEnumerable<Test.Models.KetQua>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Tìm kiếm kết quả bán hàng của nhân viên", "TimKiemKQNV")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaNV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.HoTenNV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong_)
        </th>

        <th>
            Thành Tiền
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.HoTenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong_)
        </td>
        <td>
            @(item.SoLuong_*item.DonGia)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.MaNV, tenSP = item.TenSP  }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaNV, tenSP = item.TenSP }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaNV, tenSP = item.TenSP })
        </td>
    </tr>
}

</table>
